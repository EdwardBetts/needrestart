# This DPKG hook tries to find the run-level scripts of the package's binary
# which has old libraries in use. Some logic is taken from the checkrestart
# (part of the debian-goodies package) package by Matt Zimmerman <mdz@debian.org>,
# Javier Fernandez-Sanguino <jfs@debian.org> et. al.

use strict;
use warnings;

sub fork_dpkg(@) {
    my $pid = open(HDPKG, '-|');
    defined($pid) || die "Can't fork: $!\n";

    if($pid == 0) {
	close(STDIN);
	close(STDERR);

	exec(@_);
	exit;
    }

    \*HDPKG
}

my $FN = shift;
my $psearch = fork_dpkg(qq(dpkg-query --search $FN));

my @pkgs;
while(<$psearch>) {
    chomp;

    next if(/^local diversion/);
    next unless(/:/);

    next unless(/([^:]+): $FN$/);

    push(@pkgs, $1);
}
close($psearch);

exit(0) unless($#pkgs > -1);

foreach my $pkg (@pkgs) {
    print "dpkg|PACKAGE|",join(', ', @pkgs),"\n";

    my $plist = fork_dpkg(qq(dpkg-query --listfiles $pkg));
    while(<$plist>) {
	print "dpkg|RC|$1\n" if(m@^/etc/init.d/(.+)$@);
    }
    close($plist);
}

exit(1);
